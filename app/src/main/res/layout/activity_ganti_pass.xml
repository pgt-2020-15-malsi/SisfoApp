<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".GantiPass">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                app:srcCompat="@drawable/si" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="60dp"
                android:padding="10dp"
                app:srcCompat="@drawable/gthd" />


        </LinearLayout>

        <TextView
            android:id="@+id/wel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Ganti Pasword"
            android:textColor="#FFE609"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nama"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="InvalidId" />

        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="NIM"
            android:textColor="#BDAFAF"
            android:id="@+id/nim"
            android:layout_below="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Password Lama Anda :"
            android:layout_marginLeft="70dp"
            android:textColor="#fff"
            android:textSize="10dp" />


        <EditText
            android:id="@+id/gantiPassLama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:layout_marginLeft="70dp"
            android:hint="Password Lama"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:textColor="#ffff"
            android:textSize="16dp" />

        <TextView
            android:layout_marginTop="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Password Baru Anda :"
            android:layout_marginLeft="70dp"
            android:textColor="#fff"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/gantiPassBaru"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="70dp"
            android:textColor="#ffff"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:layout_below="@id/editNim"
            android:layout_centerHorizontal="true"
            android:hint="Password Baru"
            android:drawableLeft="@drawable/ic_action_pass"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Password Baru Anda :"
            android:layout_marginLeft="70dp"
            android:textColor="#fff"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/gantiKonfirmPassBaru"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="70dp"
            android:textColor="#ffff"
            android:inputType="textPassword"
            android:layout_below="@id/editNim"
            android:layout_centerHorizontal="true"
            android:hint="Konfirmasi Password Baru"
            android:drawableLeft="@drawable/ic_action_pass"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/buttonGPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="Ganti Password" />

        <Button
            android:id="@+id/buttonBatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Batal" />
    </LinearLayout>

</RelativeLayout>