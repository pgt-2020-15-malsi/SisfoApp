<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Profil">

    <LinearLayout
        android:id="@+id/layout"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                app:srcCompat="@drawable/si" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                app:srcCompat="@drawable/gthd" />


        </LinearLayout>

        <TextView
            android:id="@+id/wel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="PROFIL"
            android:textColor="#FFE609"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="298dp"
            android:layout_height="418dp"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nim"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewNim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nim disini"
                android:textColor="#B5B0B0"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="nama disini"
                android:textColor="#B5B0B0"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewJK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="jenis kelamin disini"
                android:textColor="#CDBCBC"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Studi"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewProdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="prodi disini"
                android:textColor= "#CDBCBC"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewTempatLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="tempat lahir disini"
                android:textColor="#CDBCBC"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewTanggalLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="tgl lahir disini"
                android:textColor="#CDBCBC"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun Masuk"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewTahunMasuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="tahun masuk disini"
                android:textColor="#CDBCBC"
                android:textSize="18dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembimbng Akademik"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="PA disini"
                android:textColor="#CDBCBC"
                android:textSize="18dp" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonGPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-9dp"
            android:text="Ganti Password ?" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Home" />
    </LinearLayout>

</RelativeLayout>